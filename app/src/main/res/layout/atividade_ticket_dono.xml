<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/problema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="Descrição"
        android:inputType="textAutoComplete"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/editar_problema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="ticket"
        android:inputType="textAutoComplete"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="Latitude"
        android:inputType="textAutoComplete"
        android:textSize="18sp" />
    <TextView
    android:id="@+id/editar_latitude"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-light"
    android:hint="ticket"
    android:inputType="textAutoComplete"
    android:textSize="18sp" />
    <TextView
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="Longitude"
        android:inputType="textAutoComplete"
        android:textSize="18sp" />
    <TextView
    android:id="@+id/editar_longitude"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-light"
    android:hint="ticket"
    android:inputType="textAutoComplete"
    android:textSize="18sp" />
    <TextView
        android:id="@+id/tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="Tipo"
        android:inputType="textAutoComplete"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/editar_tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="Tipo"
        android:inputType="textAutoComplete"
        android:textSize="18sp" />
    <Spinner
        android:id="@+id/dropdown1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>
    <Button
        android:id="@+id/botao_tipo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="change the type"
        android:background="@color/design_default_color_background"/>
    <Button
        android:id="@+id/botao_localizacao"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="change the local"
        android:background="@color/design_default_color_background"/>

    <Button
        android:id="@+id/botao_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_guardar"
        android:background="@color/design_default_color_primary"/>
    <Button
        android:id="@+id/botao_remover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete"
        android:background="@color/design_default_color_background"/>
</LinearLayout>